<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<title>Grupo Nº 3</title>

<body>
  <ul class="list-group">
    <ul class="list-group"><h3>Usuario conectado: <strong><%= name %></strong></h13>
      <a> <button onclick="myFunction()"> CERRAR SESIÓN </button></a>
      <a class="list-group-item list-group-item-primary" aria-current="page" href="/usuarios/listar"> VISTA DE TODOS LOS USUARIOS</a>
      <a class="list-group-item list-group-item-secondary" aria-current="page" href="/usuarios/registro">CREAR UN NUEVO USUARIO</a>

  </ul>

  <table class="table table-dark table-bordered table-striped text-center mt-4">
    <thead>


      <tr class="bg-primary text-white">
        <th scope="col">TAREA ID</th>
        <th scope="col">DNI</th>
        <th scope="col">TITULO</th>
        <th scope="col">DESCRIPCIÓN</th>
        <th scope="col">ESTADO</th>
        <th scope="col">CREADO</th>
        <th scope="col">ACTUALIZADO</th>
        <th scope="col">ELIMINADO</th>
        <th scope="col">EDITAR</th>

      </tr>
    </thead>
    <tbody>
      <% results.forEach((tareas)=>{ %>
        <tr>
          <td>
            <%= tareas.id %>
          </td>
          <td>
            <%= tareas.dni_usuario %>
          </td>
          <td>
            <%= tareas.titulo %>
          </td>
          <td>
            <%= tareas.descripcion %>
          </td>
          <td>
            <%= tareas.estado %>
          </td>
          <td>
            <%= tareas.created%>
          </td>
          <td>
            <%= tareas.updated %>
          </td>
          <td>
            <%= tareas.eliminated %>
          </td>
          <td>
            <a href="/usuarios/add_tareas/<%= tareas.dni_usuario  %>" class="btn btn-outline-info">Nueva tarea<i
                class='bx bxs-edit'></i></a>
            <a href="/usuarios/edit_tareas/<%= tareas.id %>" class="btn btn-outline-info">Editar<i class='bx bxs-edit'></i></a>
            <a href="/usuarios/delete_tareas/<%= tareas.id  %>" class="btn btn-outline-danger">Eliminar<i
                class='bx bxs-trash-alt'></i></a>
                <a href="/usuarios/view_tareas/<%= tareas.dni_usuario %>" class="btn btn-outline-info">Todas las tareas del usuario
                  por DNI<i class='bx bxs-edit'></i></a>
          </td>
        </tr>
        <% }) %>
    </tbody>
    <script>
      function myFunction() {
        localStorage.clear();
        window.location = "/logout";

      }
    </script>
</body>
</table>